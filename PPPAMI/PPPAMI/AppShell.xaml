<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PPPAMI.Views"
    x:Class="PPPAMI.AppShell">

    <TabBar>
        <Tab Title="Home" Icon="home.svg">
            <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage"/>
        </Tab>

        <Tab Title="Dice" Icon="dice.svg">
            <ShellContent Title="Dice"
                          ContentTemplate="{DataTemplate local:DiceView}"
                          Route="Dice"/>
        </Tab>

        <Tab Title="Char" Icon="Personagem.svg">
            <ShellContent Title="Personagem"
                          ContentTemplate="{DataTemplate local:PersonagemView}"
                          Route="PersonagemView"/>
        </Tab>

        <Tab Title="Options" Icon="settings.svg">
            <ShellContent Title="Options"
                          ContentTemplate="{DataTemplate local:ConfigView}"
                          Route="Config"/>
        </Tab>
    </TabBar>

</Shell>
