<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PPPAMI.MainPage"
             Title="Home"
             BackgroundColor="LightSkyBlue">

    <ScrollView>
        <VerticalStackLayout
        Spacing="25"
        Padding="30"
        VerticalOptions="Center">

            <Label
            Text="PPGAMES" TextColor="DarkBlue"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontFamily="Poppins_Semibold"
            FontSize="40" 
            FontAttributes="Bold"/>

            <Label
               Text="Welcome to our application" TextColor="Black"
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               FontFamily="Poppins_Semibold"
               FontSize="24" 
               FontAttributes="Bold"/>
            
            <Image
            x:Name="joystick"
            Source="joystick.svg"
            SemanticProperties.Description="joystick"
            HeightRequest="150"
            HorizontalOptions="Center"
            Margin="25, 0, 25, 0"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
